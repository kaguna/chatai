<div id="message_<%= message.id %>" class="message flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %> mb-4">
  <div class="max-w-xs sm:max-w-sm lg:max-w-md px-3 sm:px-4 py-2 rounded-lg <%= message.role == 'user' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-800' %>">
    <div class="text-sm break-words">
      <%= simple_format(message.content) %>
    </div>
    <div class="text-xs opacity-75 mt-1">
      <%= message.created_at.strftime("%H:%M") %>
    </div>
  </div>
</div>
