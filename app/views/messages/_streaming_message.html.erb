<div id="message_<%= message.id %>" class="message flex justify-start">
  <div class="max-w-xs lg:max-w-md px-4 py-2 rounded-lg bg-gray-200 text-gray-800">
    <div id="message_<%= message.id %>_content" class="text-sm">
      <span class="typing-indicator inline-flex items-center">
        <span class="animate-bounce ml-1 text-gray-500 size-2 bg-gray-500 rounded-full" style="animation-duration: 0.6s; animation-delay: 0s;"></span>
        <span class="animate-bounce ml-1 text-gray-500 size-2 bg-gray-500 rounded-full" style="animation-duration: 0.8s; animation-delay: 0.4s;"></span>
        <span class="animate-bounce ml-1 text-gray-500 size-2 bg-gray-500 rounded-full" style="animation-duration: 1.0s; animation-delay: 0.8s;"></span>
      </span>
    </div>
  </div>
</div>
