<%= turbo_stream_from "conversations" %>
<%= turbo_stream_from "conversation_#{@selected_conversation&.id}" if @selected_conversation %>

<div class="flex h-screen bg-gray-100" data-controller="mobile-navigation">
  <!-- Mobile Overlay -->
  <div data-mobile-navigation-target="overlay" 
       data-action="click->mobile-navigation#close"
       class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"></div>
  
  <!-- Left Panel - Conversations List -->
  <div data-mobile-navigation-target="panel" 
       class="w-full lg:w-1/3 bg-white border-r border-gray-200 flex flex-col fixed lg:relative z-50 lg:z-auto transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out h-full lg:h-auto">
    <!-- Header -->
    <div class="p-4 border-b border-gray-200 flex items-center justify-between flex-shrink-0">
      <div class="flex items-center gap-2">
        <h1 class="text-xl font-bold text-gray-800">Conversations</h1>
        <%= button_to "+", 
                    create_conversation_path, 
                    method: :post,
                    class: "bg-blue-600 text-white w-8 h-8 rounded-full hover:bg-blue-700 flex items-center justify-center text-lg font-semibold" %>
      </div>
      <!-- Mobile close button -->
      <button data-mobile-navigation-target="closeButton"
              data-action="click->mobile-navigation#close"
              class="lg:hidden text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Conversations List -->
    <div class="flex-1 overflow-y-auto min-h-0">
      <div id="conversations" class="pb-4">
        <% @conversations.each do |conversation| %>
          <%= render partial: "conversations/conversation", 
                     locals: { 
                       conversation: conversation, 
                       selected: conversation == @selected_conversation 
                     } %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right Panel - Chat Interface -->
  <div class="flex-1 flex flex-col">
    <!-- Mobile Header with Navigation Toggle - Always visible on mobile -->
    <div class="lg:hidden bg-white border-b border-gray-200 p-4 flex items-center gap-3">
      <button data-mobile-navigation-target="openButton"
              data-action="click->mobile-navigation#open"
              class="text-gray-600 hover:text-gray-800">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <div class="flex-1">
        <% if @selected_conversation %>
          <h2 class="text-lg font-semibold text-gray-800 truncate"><%= @selected_conversation.title %></h2>
        <% else %>
          <h2 class="text-lg font-semibold text-gray-800">Karinova AI</h2>
        <% end %>
      </div>
    </div>
    
    <% if @selected_conversation %>
      <!-- Desktop Chat Header -->
      <div class="bg-black text-white p-4 border-b border-blue-700 hidden lg:block">
        <h2 class="text-lg font-semibold text-white"><%= @selected_conversation.title %></h2>
      </div>

      <!-- Messages Container -->
      <div id="messages" class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50" data-controller="auto-scroll" data-auto-scroll-target="container">
        <% @messages.each do |message| %>
          <%= render partial: "messages/message", locals: { message: message } %>
        <% end %>
      </div>

      <!-- Message Form -->
      <div class="bg-white border-t border-gray-200 p-4">
        <div id="message_form" data-controller="message-form" data-message-form-messages-container-value="#messages">
          <%= form_with model: [@selected_conversation, Message.new], 
                        url: chats_path,
                        method: :post,
                        local: false,
                        data: { 
                          turbo_stream: true,
                          action: "submit->message-form#submit"
                        },
                        class: "flex flex-col lg:flex-row space-y-2 lg:space-y-0 lg:space-x-2" do |form| %>
            <%= form.hidden_field :conversation_id, value: @selected_conversation.id %>
            <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2 lg:space-x-2 lg:space-y-0">
              <%= form.select :model, 
                              options_for_select(@available_models.map { |model| [model[:name], model[:model]] }, "llama3:latest"),
                              {},
                              { class: "border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-sm lg:text-base min-w-0 sm:flex-shrink-0" } %>
              <%= form.text_field :message, 
                                  placeholder: "Type your message...", 
                                  class: "flex-1 border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm lg:text-base min-w-0",
                                  required: true,
                                  data: { message_form_target: "input" } %>
            </div>
            <%= form.submit "Send", 
                            class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm lg:text-base w-full sm:w-auto mt-2 lg:mt-0" %>
          <% end %>
        </div>
      </div>

      <!-- Error Container -->
      <div id="error"></div>
    <% else %>
      <!-- No Conversation Selected -->
      <div class="flex-1 flex items-center justify-center bg-gray-50">
        <div class="text-center">
          <div class="text-gray-400 text-6xl mb-4">ðŸ’¬</div>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">No Conversation Selected</h3>
          <p class="text-gray-500">Choose a conversation from the left panel or start a new chat.</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
