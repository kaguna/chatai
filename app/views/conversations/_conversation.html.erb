<div id="conversation_<%= conversation.id %>" 
     class="<%= local_assigns[:selected] ? 'bg-blue-50 border-blue-200' : '' %> 
            border-l-4 <%= local_assigns[:selected] ? 'border-blue-500' : 'border-transparent' %> 
            p-3 sm:p-4 hover:bg-gray-50 transition-colors group">
  <div class="flex justify-between items-start">
    <%= link_to root_path(conversation_id: conversation.id), 
                class: "flex-1 min-w-0" do %>
      <div class="flex-1 min-w-0">
        <h3 class="<%= local_assigns[:selected] ? 'text-blue-800 font-semibold' : 'text-gray-800' %> 
                   text-sm font-medium truncate">
          <%= conversation.title %>
        </h3>
        <p class="text-xs text-gray-500 mt-1">
          <%= conversation.messages.count %> messages
        </p>
        <% if conversation.messages.last %>
          <p class="text-xs text-gray-400 mt-1 truncate">
            <%= conversation.messages.last.content.truncate(40) %>
          </p>
        <% end %>
      </div>
    <% end %>
    
    <div class="flex items-center gap-2 ml-2 flex-shrink-0">
      <div class="text-xs text-gray-400">
        <%= conversation.updated_at.strftime("%m/%d") %>
      </div>
      
      <!-- Delete Button -->
      <%= button_to conversation_path(conversation), 
                    method: :delete,
                    class: "p-1 rounded-full hover:bg-red-100 text-red-500 hover:text-red-700 transition-colors duration-200",
                    data: { 
                      turbo_confirm: "Are you sure you want to delete this conversation? This action cannot be undone.",
                      turbo_stream: true
                    },
                    title: "Delete conversation" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
</div>